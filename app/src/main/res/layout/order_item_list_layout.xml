<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/txtSNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_marginStart="5dp"></TextView>
    <TextView
        android:id="@+id/txtItem"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Potato"
        android:textSize="16sp"
        android:layout_toRightOf="@id/txtSNo"
        android:layout_toLeftOf="@id/txtQuantity"
        android:layout_marginEnd="10dp"
        android:padding="10dp"
        android:layout_marginStart="10dp"></TextView>
    <TextView
        android:id="@+id/txtQuantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="1.0 kg"
        android:textSize="16sp"
        android:padding="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="10dp"></TextView>


</RelativeLayout>