<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lockdownhelp.app.UserProfile">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        app:contentInsetStart="0dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageButton
                android:id="@+id/imgBtnBack"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/form_back"
                android:padding="20dp"
                android:background="@null"></ImageButton>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Profile"
                android:textSize="16sp"
                android:textColor="@color/colorGrey"
                android:layout_centerInParent="true"
                android:textStyle="bold"></TextView>
        </RelativeLayout>
    </androidx.appcompat.widget.Toolbar>
    <View
        android:id="@+id/view1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey400"
        android:layout_below="@id/toolbar"></View>
    <RelativeLayout
        android:id="@+id/relProfile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view1">
        <RelativeLayout
            android:id="@+id/relProfilePic"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/profile_bg"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/txtNameInitials"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="LD"
                android:maxLength="2"
                android:textSize="24sp"
                android:textColor="@color/colorWhite"
                android:layout_centerInParent="true"
                android:textStyle="bold"></TextView>
        </RelativeLayout>
        <TextView
            android:id="@+id/txtName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Aryan Raj"
            android:textStyle="bold"
            android:textSize="16sp"
            android:layout_toRightOf="@id/relProfilePic"
            android:layout_marginTop="20dp"></TextView>
        <TextView
            android:id="@+id/txtMobile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="938434792"
            android:layout_below="@id/txtName"
            android:layout_marginTop="4dp"
            android:layout_toRightOf="@id/relProfilePic"></TextView>
        <TextView
            android:id="@+id/txtEdit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Edit"
            android:textStyle="bold"
            android:textColor="@color/colorLightBlue"
            android:layout_alignParentEnd="true"
            android:padding="20dp"></TextView>

    </RelativeLayout>
    <View
        android:id="@+id/view2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/relProfile"
        android:background="@color/quantum_grey300"></View>
    <RelativeLayout
        android:id="@+id/relYourRequests"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view2"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackgroundBorderless">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Your Requests"
            android:textSize="16sp"
            android:padding="20dp"></TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey300"
        android:layout_below="@id/relYourRequests"></View>

    <RelativeLayout
        android:id="@+id/relPrivacy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view3"
        android:foreground="?attr/selectableItemBackgroundBorderless">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Privacy"
            android:textSize="16sp"
            android:padding="20dp"></TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view4"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey300"
        android:layout_below="@id/relPrivacy"></View>

    <RelativeLayout
        android:id="@+id/relHelpUs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view4"
        android:foreground="?attr/selectableItemBackgroundBorderless">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Help Us ?"
            android:textSize="16sp"
            android:padding="20dp"></TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view5"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey300"
        android:layout_below="@id/relHelpUs"></View>
    <RelativeLayout
        android:id="@+id/relLogout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/view5"
        android:foreground="?attr/selectableItemBackgroundBorderless">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textSize="16sp"
            android:padding="20dp"></TextView>
    </RelativeLayout>
    <View
        android:id="@+id/view6"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/quantum_grey300"
        android:layout_below="@id/relLogout"></View>

</RelativeLayout>